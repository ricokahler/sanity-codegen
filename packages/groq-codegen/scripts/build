#!/bin/bash

rm -rf ./dist

npx tsc --project ./tsconfig.build.json

npx babel                                                     \
  -x .js,.ts                                                  \
  --ignore /**/*.test.ts,/**/*.d.ts,**/__example-files__/**/* \
  --out-dir ./dist                                            \
  --root-mode upward                                          \
  ./src
